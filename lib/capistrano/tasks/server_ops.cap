task :app_shutdown do
  on roles(:all) do |host|
    execute "#{fetch :app_shutdown_command}"
    exit 1
  end
end

task :app_startup do
  on roles(:all) do |host|
    execute "#{fetch :app_startup_command}"
  end
end

namespace :deploy do
  task :migrate do
    info "Do nothing in this railsless deploy."
  end
  task :restart do
    info "Do nothing in this railsless deploy."
  end
end